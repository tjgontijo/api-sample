generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model State {
  id         String   @id @default(uuid())
  shortName  String   @unique
  name       String   @unique
  region     String
  created_at DateTime @default(now())
  User       User[]

  @@map("states")
}

model User {
  id            String   @id @default(uuid())
  stateId       String
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  state         State    @relation(fields: [stateId], references: [id])

  @@map("users")
}

model ThematicArea {
  id         String   @id @default(uuid())
  short_name String   @unique
  name       String   @unique
  created_at DateTime @default(now())

  @@map("thematic_areas")
}

model Institution {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())
  short_name String   @unique

  @@map("institutions")
}

model TypeOfExpense {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  @@map("types_of_expenses")
}
