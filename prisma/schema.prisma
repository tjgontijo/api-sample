generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model ThematicArea {
  id         String   @id @default(uuid())
  short_name String   @unique
  name       String   @unique
  percentage Int
  created_at DateTime @default(now())

  actions Action[]

  @@map("thematic_areas")
}

model Action {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  thematic_area    ThematicArea @relation(fields: [thematic_area_id], references: [id])
  thematic_area_id String

  @@map("actions")
}
